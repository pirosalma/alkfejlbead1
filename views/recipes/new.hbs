<div class="page-header">
    <h1>Új recept felvétele</h1>
</div>

<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group
            {{#if validationErrors.cim}}
                has-error
            {{/if}}
        ">
            <label for="cim" class="col-lg-2 control-label">Recept neve</label>
            <div class="col-lg-10">
                <input class="form-control" id="cim" name="cim" placeholder="pl. Spagetti, Mákosguba, lecsó..." type="text" value="{{data.cim}}">
                {{#if validationErrors.cim}}
                    <span class="help-block">{{validationErrors.cim.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group
            {{#if validationErrors.leiras}}
                has-error
            {{/if}}
        ">
            <label for="leiras" class="col-lg-2 control-label">Elkészítés módja</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="leiras" name="leiras">{{data.leiras}}</textarea>
                <span class="help-block">Meg kell adni az elkészités módját.</span>
                {{#if validationErrors.leiras}}
                    <span class="help-block">{{validationErrors.leiras.msg}}</span>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>        